<div id='user' class='centered-content'>
  <h1 class='title centered'><%= @user.name %>'s Profile</h1>
  <% if current_user && (current_user == @user || current_user.is_admin?) %>
    <div class='centered'>
      <span id='user-options'>(<%= link_to 'Edit', edit_user_path(@user) %> - <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user? This action cannot be undone.' } %>)
      </span>
    </div>
  <% end %>
  <% if @user.last_seen %>
    <p id='last-seen'>They were last seen <%= time_ago_in_words(@user.last_seen) %> ago<p>
  <% end %>

  <% if @user.nanowrimo_name && @user.nanowrimo_name.length > 0 %>
    <hr class='thick' />
    <h3 class='title'>NaNoWriMo Statistics</h3>

    <p id='nano-name'><strong>Username:</strong> <%= @user.nanowrimo_name %></p>
    <p id='nano-wc'><strong>Wordcount:</strong> <%= @wordcount %></p>
  <% end %>

  <hr class='thick' />

  <h3 class='title'>About <%= @user.name %></h2>
  <%= simple_format @user.about, class: 'about' %>

  <h3 class='title'>What do they like to write?</h2>
  <p class='likes'><%= @user.tag_list %></p>

  <hr class='thick' />

  <h3 class='title'>Here's what they've written</h3>

  <% @works.each do |work| %>
    <h3 class='title'><%= link_to work.title, work %></h3>
    <p class='time'><%= time_ago_in_words(work.created_at) %> ago</p>
    <p class='excerpt'>
      <%= work.body[0..255] %>...
    </p>

    <% if work != @works.last %>
      <hr />
    <% end %>
  <% end %>
  <div class='centered'>
    <%= will_paginate @works %>
  </div>
</div>
