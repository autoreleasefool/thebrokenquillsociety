<header id='header'>

  <!-- begin website title -->
  <% if current_page?(root_path) %>
    <%= link_to '#', class: 'logo' do %><%= image_tag 'logo.png' %><% end %>
  <% else %>
    <%= link_to root_path, class: 'logo' do %><%= image_tag 'logo.png' %><% end %>
  <% end %>
  <!-- end website title -->

  <% unless current_user.blank? %>
    <nav id='nav'>
      <div class='nav-wrapper'>
        <!-- link to user profile -->
        <h2 id='profile-link'><%= link_to current_user.name, user_path(current_user) %></h2>
        <!-- end link to user profile -->

        <!-- link to profile -->
        <% if current_user.is_admin? %>
          <%= link_to admin_options_path, id: 'admin-profile-svg' do %>
