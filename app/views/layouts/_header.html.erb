<header id='header'>

  <!-- begin website title -->
  <% if current_page?(root_path) %>
    <h1 class='logo'><a href='#'>Untitled</a></h1>
  <% else %>
    <h1 class='logo'><%= link_to 'Untitled', root_path %></h1>
  <% end %>
