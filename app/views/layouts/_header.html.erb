  <% end %>
  <!-- end website title -->

  <% if current_user.blank? %>

    <!-- Login / sign up button -->
    <div class='btn-group login'>
      <a class='btn btn-theme btn-login' href='/login'>Login</a>
      <button type='button' class='btn btn-theme btn-login-caret dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
        <span class='caret'></span>
        <span class='sr-only'>Toggle Dropdown</span>
      </button>
      <ul class='dropdown-menu pull-right'>
        <li><a href='/login'>Login</a></li>
        <li><a href='/signup'>Sign up</a></li>
      </ul>
    </div>
    <!-- end login button -->

  <% end %>

  <!-- begin search box -->
  <div id='search' class='search-wrapper'>
    <div class='search-container search-container-transition'>
      <span id='search-icon' class='icon'><i class='fa fa-search'></i></span>
      <%= text_field_tag :q, params[:q], onfocus: 'this.value = this.value', id: 'search-box', placeholder: 'Search works, users...' %>
    </div>
    <div id='btn-search'></div>
  </div>
  <!-- end search box -->

  <% unless current_user.blank? %>

    <nav id='nav'>
      <%= link_to user_path(current_user) do %><h2 id='profile-link'><%= current_user.name %></h2><% end %>

      <!-- link to profile -->
      <% if current_user.is_admin? %>
        <%= link_to admin_options_path, id: 'admin-profile-svg' do %>
          <svg class='svg-header svg-small' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'>
