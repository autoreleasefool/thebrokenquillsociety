    <!-- end icon -->

  <% end %>

  <!-- begin search box -->
  <div class='search-box'>
    <div class='search-container'>
      <span class='icon' id='search-btn'><i class='fa fa-search'></i></span>
      <input type='text' id='search-box' placeholder='Search...' />
    </div>
  </div>
  <!-- end search box -->

</header>
