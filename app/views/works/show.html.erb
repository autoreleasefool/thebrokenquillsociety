<p>ID: <%= @work.id %></p>
<p>Title: <%= @work.title %></p>
<p>Body: <%= @work.body %></p>
<p>Tags: <%= @work.tag_list %></p>
<p>Incomplete?: <%= @work.incomplete %></p>
<p>Author: <%= @work.user.name %></p>

<%= link_to 'Edit', edit_work_path(@work) %>
<%= link_to 'Delete', work_path(@work), method: :delete, data: { confirm: 'Are you sure?' } %>

<div id='comments'>
  <h2><%= @work.comments.count %> Comments</h2>
  <%= render @work.comments %>

  <h3>Add a comment:</h3>
  <%= render 'comments/form' %>
</div>
