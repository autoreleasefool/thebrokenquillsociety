<div class='form-header'>
  <h1 class='title'>Leave a comment</h1>
</div>

<%= simple_form_for ([@work, @work.comments.build]), html: { class: 'form' } do |f| %>

  <%= f.input :body,
        required: true,
        disabled: current_user.blank?,
        label: 'Comment',
        wrapper_html: { class: 'remove-bottom-margin' },
        input_html: { class: 'flat-input tall-area' },
        label_html: { class: 'input-label' } %>
  <% if current_user.blank? %>
    <div class='alert alert-warning'>You must be signed in to leave a comment.</div>
  <% else %>
    <p id='comment-body-counter' class='counter'><span id='comment-body-count'>0</span> / 1000</p>
  <% end %>

  <div class='form-submit'>
    <%= f.submit 'Save',
          disabled: current_user.blank?,
          class: 'btn btn-lg btn-theme' %>
  </div>

<% end %>
