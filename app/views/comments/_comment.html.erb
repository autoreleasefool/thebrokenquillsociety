<div class='comment'>
  <%= simple_format comment.body, class: 'body' %>
  <% if !current_user.blank? && (current_user == comment.user || current_user.is_admin?) && show_admin_options %>
    <p class='options'>
      <%= link_to 'Edit', edit_work_comment_path(@work, comment) %> | <%= link_to 'Delete', work_comment_path(@work, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment? It cannot be recovered.' } %>
    </p>
  <% end %>
  <p class='author'>
    <strong>
      <% unless comment.user.blank? %>
        <%= link_to comment.user.name, users_path(comment.user) %>
      <% else %>
        <span class='time'>[Deleted]</span>
      <% end %>
    </strong> <span class='time'> - <%= time_ago_in_words(comment.created_at) %> ago</span>
  </p>
</div>
<hr />
